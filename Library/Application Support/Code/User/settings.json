{
  "[html, handlebars]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[less, sass, scss, css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[javascript, json, typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "diffEditor.ignoreTrimWhitespace": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": false,
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "editor.fontFamily": "'operator mono', 'fira code','cascadia code', Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontFamily": "'JetBrainsMonoNL Nerd Font Mono', 'Fira Code', 'Operator Mono', 'Cascadia Code', 'Menlo', 'Monaco', 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.fontWeight": "400",
  "editor.linkedEditing": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italic (=FlottFlott)
          "comment",
          // "entity.name.type.class", //class names
          "keyword", //import, export, return…
          "constant" //String, Number, Boolean…, this, super
          // "storage.modifier", //static keyword
          // "storage.type.class.js" //class keyword
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          //following will be excluded from italics (VSCode has some defaults for italics)
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  // "editor.renderWhitespace": "selection",
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.lineHeight": 22,
  "editor.letterSpacing": 0.5,
  "editor.cursorWidth": 3,
  "editor.minimap.enabled": false,
  "editor.tabCompletion": "on",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  // "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",
  // "emmet.triggerExpansionOnTab": true,
  "eslint.codeActionsOnSave.mode": "problems",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "explorer.autoRevealExclude": {
    "**/node_modules": true,
    "**/.yarn/.cache": true
  },
  // "files.autoSave": "onFocusChange",
  "files.associations": {
    ".env.{dev,example,prod,qa,review,stage}": "env"
  },
  "material-icon-theme.files.associations": {
    ".env.review": "tune"
  },
  "git.enabled": true,
  "git.path": "/usr/local/bin/git",
  // "graphql-codegen.filePathToWatch": "./src/gql/**/*.graphql",
  "http.proxySupport": "off",
  "http.proxy": "",
  "http.proxyAuthorization": null,
  "http.proxyStrictSSL": false,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "terminal.integrated.fontSize": 15,
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": false,
  "workbench.settings.openDefaultSettings": false,
  "workbench.startupEditor": "newUntitledFile",
  // "workbench.editor.enablePreview": false,
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#00BCD4",
    "editorBracketHighlight.foreground2": "#CDDC39",
    "editorBracketHighlight.foreground3": "#EC407A",
    "editorBracketHighlight.foreground4": "#9C27B0"
  },
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "cSpell.userWords": [
    "Anakin",
    "camelcase",
    "Datetime",
    "Kenobi",
    "Naboo",
    "pnpm",
    "rivian",
    "rivianos",
    "Skywalker",
    "Tatooine",
    "testid",
    "Wookies"
  ],
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.profiles.osx": {
    "zsh (login)": {
      "path": "zsh",
      "args": ["-l"]
    }
  },
  "editor.suggestSelection": "first",
  "workbench.colorTheme": "Catppuccin Macchiato",
  "redhat.telemetry.enabled": true,
  "git.autofetch": true,
  "git.mergeEditor": false,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.iconTheme": "catppuccin-macchiato",
  "editor.stickyScroll.enabled": true,
  "gitlens.rebaseEditor.ordering": "asc",
  "workbench.editorAssociations": {
    "git-rebase-todo": "default"
  },
  "window.zoomLevel": 1,
  "editor.lineNumbers": "relative",

  // "vim.smartRelativeLine": true,
  "vim.hlsearch": true,
  "vim.leader": "<Space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    // NAVIGATION
    // switch between buffers (tabs)
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },
    // splits new panes
    { "before": ["leader", "v"], "commands": [":vsplit"] },
    { "before": ["leader", "s"], "commands": [":split"] },
    // move between panes
    {
      "before": ["leader", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    // NICE TO HAVE
    { "before": ["leader", "w"], "commands": [":w!"] },
    { "before": ["leader", "q"], "commands": [":q!"] },
    { "before": ["leader", "x"], "commands": [":x!"] },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    { "before": ["leader", "f"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["leader", "p"], "commands": ["editor.action.formatDocument"] },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    { "before": ["<S-5>"], "commands": ["editor.emmet.action.matchTag"] },
    { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] }
  ],
  "vim.visualModeKeyBindings": [
    // Stay in visual mode while indenting
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    // Move selected lines while staying in visual mode
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
    // toggle comment selection
    { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] }
  ],
  "breadcrumbs.enabled": false
}
